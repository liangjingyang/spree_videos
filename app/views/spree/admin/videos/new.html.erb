<% content_for :page_title do %>
     <%= Spree.t(:new_video) %>
 <% end %>

 <%= form_for [:admin, @product, @video] do |f| %>
     <div class="row">
         <div class="col-md-12">
             <%= render 'form', f: f %>
         </div>
     </div>
     <div class="form-actions" data-hook="buttons">
         <%= button Spree.t('actions.create'), 'ok', 'submit', {class: 'btn-success'} %>
         <span class="or"><%= Spree.t(:or) %></span>
         <%= button_link_to Spree.t('actions.cancel'), admin_product_videos_url(@product), :icon => 'remove' %>
     </div>
 <% end %> 
